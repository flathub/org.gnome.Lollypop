    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri",
    "--filesystem=host",
    "--filesystem=xdg-run/dconf",
    "--filesystem=~/.config/dconf:rw",
    "--talk-name=org.gtk.vfs",
